@page
@model MyEvenement.Pages.Inscriptions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Inscription</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscription.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscription.Prenom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscription.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscription.Nationalite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription.Nationalite)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscription.Adress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription.Adress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscription.Telephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription.Telephone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscription.Evenement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscription.Evenement.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Inscription.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Inscription.Status)
        </dd>
    </dl>
</div>

@if (Model.Inscription.Status != InscriptionStatus.Approved)
{
    @if ((await AuthorizationService.AuthorizeAsync(
     User, Model.Inscription, InscriptionOperations.Approve)).Succeeded)
    {
        <form style="display:inline;" method="post">
            <input type="hidden" name="id" value="@Model.Inscription.InscriptionID" />
            <input type="hidden" name="status" value="@InscriptionStatus.Approved" />
            <button type="submit" class="btn btn-xs btn-success">Approve</button>
        </form>
    }
}

@if (Model.Inscription.Status != InscriptionStatus.Rejected)
{
    @if ((await AuthorizationService.AuthorizeAsync(
     User, Model.Inscription, InscriptionOperations.Reject)).Succeeded)
    {
        <form style="display:inline;" method="post">
            <input type="hidden" name="id" value="@Model.Inscription.InscriptionID" />
            <input type="hidden" name="status" value="@InscriptionStatus.Rejected" />
            <button type="submit" class="btn btn-xs btn-danger">Reject</button>
        </form>
    }
}

<div>
    @if ((await AuthorizationService.AuthorizeAsync(
         User, Model.Inscription,
         InscriptionOperations.Update)).Succeeded)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Inscription.InscriptionID">Edit</a>
        <text> | </text>
    }
    <a asp-page="./Index">Back to List</a>
</div>
